<div class="container">
    <% if (flag == 0){%>
    <div class="d-flex justify-content-center">
        <div class="spinner-border" style="width: 5rem; height: 5rem; color: green;" role="status" id="processLogo">
            <span class="sr-only"> Loading...</span>
        </div>
    </div>
    <h1 class="display-4 text-center mt-3"> In Process </h1>
    <%} else if (flag == 1){%>
    <div class="d-flex justify-content-center">
        <span style="font-size: 5rem; color: green;">
            <i class="fas fa-check"></i>
        </span>
    </div>
    <h1 class="display-4 text-center"> Completed! </h1>
    <%}%>
</div>

<div class="container border rounded shadow-lg mt-5">
    <p class="text-center">
        The job ID is:
    </p>
    <% if (flag == 0){%>
    <button class="btn btn-primary btn-lg" disabled><%= jobId %></button>
    <%} else if (flag == 1){%>
    <center><a class="btn btn-primary btn-lg" href="/jobs/:<%= jobId %>"> <%= jobId %></a></center>>
    <%}%>
    <center><button class="btn btn-primary mt-2" id="copyBtn"> Copy </button></center>
</div>

<!-- auto fresh -->
<script>
    if ("<%= flag%>" == 0) {
        function myrefresh() {
            window.location.reload();
        }
        setTimeout('myrefresh()', 2000); //20s refresh
    }

    // create a copy button
    $('#copyBtn').click(function () {
        const input = document.createElement('input');
        document.body.appendChild(input);
        input.setAttribute('readonly', 'readonly')
        input.setAttribute('value', $('#jobIDOutput').text().trim());
        $(input).select();
        // input.setSelectionRange(0, 9999);
        if (document.execCommand('copy')) {
            document.execCommand('copy');
            console.log('copy success');
            alert("Copy Success!");
        }
        document.body.removeChild(input);
    })
</script>

